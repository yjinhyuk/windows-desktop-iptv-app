<UserControl x:Class="WinIPTVApp.Pages.Login.Views.LoadAccountInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinIPTVApp.Pages.Login.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Image Source="" Height="59" />
            <TextBlock Text="s t r i m o" FontSize="68" TextAlignment="Center" Foreground="{DynamicResource gray}" Margin="0,0,0,188" />
            <TextBlock Text="LOADING ACCOUNT" FontSize="30" Foreground="{DynamicResource gray}" TextAlignment="Center" Margin="0,0,0,62.5" />
            <ProgressBar x:Name="LoadAccountProgressBar" Value="{Binding Path=LoadAccountProgressBar}"
                         Style="{DynamicResource CornerProgressBar}" Height="12" Width="592" Foreground="{DynamicResource white_200}" />
        </StackPanel>
    </Grid>
</UserControl>
